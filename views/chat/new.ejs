<%- include("../partials/header") %>

    <div class="row">
        <header class="jumbotron" style="width: 50%; margin: 25px auto;">
            <div style="width: 70%; margin: 25px auto;">
                <h1 style="text-align: center">Create New Chat</h1>        
                <form action="/chat" method="POST">
                    <div class="form-group">
                        <p> Who do you want to invite to this chat? </p>    
                        <select class="selectpicker form-control" data-style="btn-info" name="mem2">
                            <% users.forEach(function(user){ %>
                                <% if(user.online && user.username!=currentUser.username){ %>
                                    <option> <%=user.username%> </option>
                                <% } %>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">
                            Create
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </form>
                <a href="/chat">
                    <button class="btn btn-dark">
                        Go Back to Chat Menu
                        <i class="fas fa-chevron-circle-left"></i>                
                    </button>        
                </a>
            </div>
        </header>
    </div>

<%- include("../partials/footer") %>