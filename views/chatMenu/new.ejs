<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Chat</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/chatMenu" method="POST">
                <div class="form-group">
                    <p> Who do you want to invite to this chat? </p>    
                    <select class="selectpicker" data-style="btn-info" name="mem2">
                        <% users.forEach(function(user){ %>
                            <% if(user.online && user.username!=currentUser.username){ %>
                                <option> <%=user.username%> </option>
                            <% } %>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/chatMenu">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>